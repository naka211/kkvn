<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="joomgallery" method="upgrade">
  <name>PLG_JOOMGALLERY_JOOMADDITIONALIMAGEFIELDS</name>
  <author>JoomlaGallery::ProjektTeam</author>
  <creationDate>08/11/2012</creationDate>
  <copyright>(C) 2012 Open Source Matters. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
  <authorEmail>team@joomgallery.net</authorEmail>
  <authorUrl>www.joomgallery.net</authorUrl>
  <version>1.1</version>
  <description>PLG_JOOMGALLERY_JOOMADDITIONALIMAGEFIELDS_XML_DESCRIPTION</description>
  <files>
    <filename plugin="joomadditionalimagefields">joomadditionalimagefields.php</filename>
    <filename>index.html</filename>
    <folder>additionalfields</folder>
  </files>
  <languages folder="language">
    <language tag="de-DE">de-DE/de-DE.plg_joomgallery_joomadditionalimagefields.ini</language>
    <language tag="de-DE">de-DE/de-DE.plg_joomgallery_joomadditionalimagefields.sys.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_joomgallery_joomadditionalimagefields.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_joomgallery_joomadditionalimagefields.sys.ini</language>
    <language tag="fr-FR">fr-FR/fr-FR.plg_joomgallery_joomadditionalimagefields.ini</language>
    <language tag="fr-FR">fr-FR/fr-FR.plg_joomgallery_joomadditionalimagefields.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="display_after_thumb" type="radio" default="1" label="PLG_JOOMGALLERY_JOOMADDITIONALIMAGEFIELDS_DISPLAY_AFTER_THUMB_LABEL" description="PLG_JOOMGALLERY_JOOMADDITIONALIMAGEFIELDS_DISPLAY_AFTER_THUMB_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="display_after_detailimage" type="radio" default="1" label="PLG_JOOMGALLERY_JOOMADDITIONALIMAGEFIELDS_DISPLAY_AFTER_DETAILIMAGE_LABEL" description="PLG_JOOMGALLERY_JOOMADDITIONALIMAGEFIELDS_DISPLAY_AFTER_DETAILIMAGE_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
      </fieldset>
    </fields>
  </config>
  <updateservers>
    <server type="collection" priority="1" name="JoomGallery Update Service">http://www.en.joomgallery.net/components/com_newversion/xml/extensions2.xml</server>
  </updateservers>
</extension>